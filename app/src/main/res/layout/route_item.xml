<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/float_layer"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/route_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="2011 x x "
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/route_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:layout_toRightOf="@id/route_time"
            android:gravity="center"
            android:text="快车"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/route_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_normal"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/start_point_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin_normal"
            android:src="@drawable/location_on_black" />

        <TextView
            android:id="@+id/start_point_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/start_point_icon"
            android:layout_alignTop="@id/start_point_icon"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_normal"
            android:layout_toRightOf="@id/start_point_icon"
            android:gravity="center"
            android:text="华贸城"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_small" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/label_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_normal"
            android:src="@drawable/keyboard_arrow_right_grey" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/end_point_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/margin_normal"
            android:src="@drawable/location_on_black" />

        <TextView
            android:id="@+id/end_point_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/end_point_icon"
            android:layout_alignTop="@id/end_point_icon"
            android:layout_margin="@dimen/margin_normal"
            android:layout_toRightOf="@id/end_point_icon"
            android:gravity="center"
            android:text="酒仙桥东路10号"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_small" />

    </RelativeLayout>

</LinearLayout>